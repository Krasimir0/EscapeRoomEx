@page
@model EscapeRoomEx.Pages.Shared.ReservationPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservations</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservations.Id" />
            <div class="form-group">
                <label asp-for="Reservations.Time" class="control-label"></label>
                <input asp-for="Reservations.Time" class="form-control" />
                <span asp-validation-for="Reservations.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservations.PlayerId" class="control-label"></label>
                <select asp-for="Reservations.PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                <span asp-validation-for="Reservations.PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservations.RoomId" class="control-label"></label>
                <select asp-for="Reservations.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Reservations.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
